<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/nayaBlue">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="505dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/movie_traffic"
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:background="@drawable/orange_button"
            app:srcCompat="@drawable/ic_traffic" />

        <ImageButton
            android:id="@+id/movie_hare"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:background="@drawable/blue_button"
            app:srcCompat="@drawable/ic_hare" />

        <ImageButton
            android:id="@+id/movie_tooth"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:background="@drawable/green_button"
            app:srcCompat="@drawable/ic_tooth" />

        <ImageButton
            android:id="@+id/movie_hund"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:background="@drawable/yellow_button"
            app:srcCompat="@drawable/hund" />

    </LinearLayout>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_nayasbrevlada" />


</androidx.constraintlayout.widget.ConstraintLayout>